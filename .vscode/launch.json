{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Jest Test Current Rule",
        "cwd": "${workspaceFolder}/src/",
        "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
        "args": [
          "--runInBand",
          "--no-cache",
          "--no-coverage",
          "${fileBasenameNoExtension}"
        ],
        "sourceMaps": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }